package main.java.hackathon.modelo;

import java.util.Map;

public class Banca implements Avaliavel {
    private Projeto projeto;
    private Map<Jurado, Integer> jurados; // Jurado â†’ nota

    public Banca(Projeto projeto, Map<Jurado, Integer> jurados) {
        this.projeto = projeto;
        this.jurados = jurados;
    }

    public Projeto getProjeto() {
        return projeto;
    }

    public Map<Jurado, Integer> getJurados() {
        return jurados;
    }

    @Override
    public void calcularNotaFinal() {
        if (jurados.isEmpty()) return;

        int soma = 0;
        for (Integer nota : jurados.values()) {
            soma += nota;
        }
        int media = soma / jurados.size();
        projeto.setNotaFinal(media);
    }
}